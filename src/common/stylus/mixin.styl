border-1px($color,$paddingt,$paddingr,$paddingd,$paddingl,$width)
  position : relative
  &:after
    display: block
    position: absolute
    left: $paddingl
    bottom: 0
    border-top 1px solid $color
    width: $width
    padding: $paddingt $paddingr $paddingd $paddingl
    content: ''

border-none()
  &:after
    display: none

bg-image($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio)
    background-image url($url + "@3x.png")
