border-1px($color,$paddingt,$paddingr,$paddingd,$paddingl,$width)
  position : relative
  &:after
    display: block
    position: absolute
    left: $paddingl
    bottom: 0
    border-top: 1px solid $color
    width: $width
    padding: $paddingt $paddingr $paddingd $paddingl
    content: ''

borderfoot-1px($color)
  position : relative
  &:after
    display: block
    position: absolute
    left: 0
    top: 0
    border-top: 1px solid $color
    width: 100%
    content: ''

border-none()
  &:after
    display: none

bg-image($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio)
    background-image url($url + "@3x.png")

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px